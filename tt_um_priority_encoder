module tt_um_priority_encoder (
    input [15:0] ui_in,
    output reg [7:0] uo_out
);
    integer i;
    
    always @(*) begin
        uo_out = 8'b11110000;
        for (i = 15; i >= 0; i = i - 1) begin
            if (ui_in[i]) begin
                uo_out = i;
                break;
            end
        end
    end
endmodule
